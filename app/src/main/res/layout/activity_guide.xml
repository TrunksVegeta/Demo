<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch">

    <com.tools.view.CustomVideoView
        android:id="@+id/guide_videoview"
        style="@style/MatchMatch"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <ImageView
        android:id="@+id/guide_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_72"
        android:layout_marginTop="@dimen/dp_52"
        android:src="@mipmap/logo" />

    <com.tools.view.PrinterTextView
        android:id="@+id/guide_text"
        style="@style/WrapWrap"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_20"
        android:textStyle="italic"
        android:typeface="serif" />

    <RelativeLayout
        style="@style/MatchWrap"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/transparent_half"
        android:id="@+id/guide_relayout">

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/welcome_jt" />

        <TextView
            style="@style/WrapWrap"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/welcome_skip"
            android:text="@string/welcome_text2"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15"
            android:textStyle="normal"
            android:typeface="serif" />
    </RelativeLayout>
</RelativeLayout>
